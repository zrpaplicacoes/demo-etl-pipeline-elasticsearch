{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Node: Debug (Local)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Pick Process (Experimental)",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Attach to Process (Docker)",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceFolder}/",
      "remoteRoot": "/app/src/",
      "restart": true,
      "protocol": "inspector",
    },
  ]
}
